@model ApplicationCore.Models.CastDetailsResponseModel

@{
    ViewData["Title"] = "Cast Detail Page";
}


<div class="rounded">
    <div class="container">
        <div class="row">
            <div class="col-3 align-content-center">
                <img class="w-75 " src="@Model.ProfilePath" alt="@Model.Name">
            </div>
            <div class="col">
                <h2 class="">@Model.Name</h2>
                <h3>
                    @(Model.Gender == "2" ? "Male" : (Model.Gender == "1") ? "Female" : "")
                    <a href="@Model.TmdbUrl" class="text-dark mx-3">Go To Cast Details TMDB</a>
                </h3>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-light">
        <div class="row">
            @foreach (var movie in @Model.Movies)
            {
                <div class="col-3">
                    <partial name="_MovieCard" model="movie" />
                    @*@await Html.PartialAsync(partialViewName: "_MovieCard", movie)*@
                </div>
            }
        </div>
    </div>
</div>